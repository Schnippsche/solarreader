<div class="row mb-3">
  <div class="col-md-6">
    <div class="form-floating">
      <input type="text" class="form-control" id="id_user" name="user" value="[USER]"
             placeholder="{setup.user.text}"
             data-bs-toggle="tooltip" data-bs-placement="bottom"
             title="{setup.user.tooltip}"/>
      <label for="id_user">{setup.user.text}</label>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-floating">
      <input type="text" class="form-control" id="id_password" name="password" value="[PASSWORD]"
             placeholder="{setup.password.text}"
             data-bs-toggle="tooltip" data-bs-placement="bottom"
             title="{setup.password.tooltip}"/>
      <label for="id_password">{setup.password.text}</label>
    </div>
  </div>
</div>